<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="@drawable/mainhomepage"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:background="@drawable/topbacground"
            android:src="@drawable/logo"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="4dp"
            android:text="MyShop"/>
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/ic_add_shopping"
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tvbacket"
                android:layout_margin="2dp"
                android:background="@drawable/cycrle"
                android:layout_gravity="top|end"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/White"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/topbacground"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:tabGravity="center"
            android:background="@drawable/tablayoutbackground"
            app:tabBackground="@drawable/select_tab_bacground"
            app:tabIndicatorColor="@color/Red"
            app:tabSelectedTextColor="@color/Red"
            app:tabTextColor="@color/btnback"
            app:tabIndicatorHeight="2dp"
            app:tabMode="scrollable"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/White"
        android:layout_marginBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <include layout="@layout/botmnagaviation"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>