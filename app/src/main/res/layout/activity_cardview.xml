<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".bucketcard.cardview">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:background="@drawable/buttonback"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/onback"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/White"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:text="Shopping Bag"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add_shopping"
                    android:orientation="vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/tvbacket"
                        android:layout_margin="2dp"
                        android:background="@drawable/cycrle"
                        android:layout_gravity="top|end"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/White"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/textbackground"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Prices are inclusive of all text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/itemrecycylebabykids"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/shopingitemrecycyle"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@color/White"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@string/shopingbag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/morelikeitem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbarStyle="insideOverlay"
                            tools:listitem="@layout/recycyleviewitem"

                            />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="2"
                        android:src="@drawable/ic_local_offer_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="start"
                        />
                    <TextView
                        android:layout_weight="4"
                        android:gravity="start"
                        android:textColor="@color/btnback"
                        android:textSize="20dp"
                        android:text="Apply Coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="start"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="@string/pricedetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="@string/totalitem"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="("
                        android:layout_width="2dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text=")"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"/>


                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/bag_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bagtotalamount"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/bag_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bagamountdiscount"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/odder_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/amountoddertotal"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/delivery_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/odderdelevierycharg"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:text="@string/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/totalamount"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:text="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="5dp"
                        android:background="@drawable/buttonback"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        android:text="Place Odder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>